package oo.heranca.desafio;

public class Ferrari extends Carro {

	Ferrari(int velocidadeMaxima) {
		super(velocidadeMaxima);
	}

	public Ferrari() {
		
	}

	@Override
	void acelerar() {
		velocidadeDoCarro += 15;
	}
	
	@Override
	void frear() {
		if(velocidadeDoCarro >= 15) {
			velocidadeDoCarro -= 15;
		} else {
			velocidadeDoCarro = 0;
		}
	}
}
