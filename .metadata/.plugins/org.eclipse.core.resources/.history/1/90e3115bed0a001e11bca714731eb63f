package fundamentos;

public class TipoString {

	public static void main(String[] args) {
		System.out.println("Olá pessoas".charAt(0)); // charAt -> funciona como um dicionário para pegar dterminada letra dentro da string
		
		String s = "Boa tarde"; // O valor definido na string é imutavel
		s = s.toUpperCase();
		System.out.println(s.concat("!!!"));
		System.out.println(s + "!!!");
		
	}
}
