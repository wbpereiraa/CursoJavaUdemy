package arrays;

import java.util.Scanner;

public class DesafioArray {

	public static void main(String[] args) {
		
		//CALCULAR A MÉDIA DO ALUNO, COM O ALUNO PASSANDO AS INFORMAÇÕES(SCANNER)
		//QUANTAS NOTAS VOCE QUER INFORMAR?
		//2 LAÇOS FOR. NO PRIMEIRO ARMAZENAR AS NOTAS NO ARRAY
		//CALCULAR A MEDIA NO SEGUNDO ARRAY USANDO O FOREACH
		
		Scanner entrada = new Scanner(System.in);
		
		int quantidadeVezes = -1;
		double nota = 0;
		double notasValidas = 0;
		double somaNotas = 0;
		
		while(quantidadeVezes > 0 )
		System.out.println("Digite quantas notas deseja informar: ");
		quantidadeVezes = entrada.nextInt();
		quantidadeVezes += quantidadeVezes;
		
		if(quantidadeVezes > 0) {
			System.out.printf("Digite a %ª nota", quantidadeVezes);
			quantidadeVezes --;
			notasValidas ++;
			somaNotas += nota;
		}else if(quantidadeVezes < 0) {
			System.out.println("Digite uma quantidade maior que 0: ");
		}
		if(quantidadeVezes <= 0) {
			System.out.println(notasValidas);
			System.out.println(somaNotas);
		}
		entrada.close();
	}
}
