package arrays;

import java.util.Scanner;

public class DesafioArray {

	public static void main(String[] args) {
		
		//CALCULAR A MÉDIA DO ALUNO, COM O ALUNO PASSANDO AS INFORMAÇÕES(SCANNER)
		//QUANTAS NOTAS VOCE QUER INFORMAR?
		//2 LAÇOS FOR. NO PRIMEIRO ARMAZENAR AS NOTAS NO ARRAY
		//CALCULAR A MEDIA NO SEGUNDO ARRAY USANDO O FOREACH
		
		
		Scanner entrada = new Scanner(System.in);
		
		double[] notas = new double[notas];
		double totalNotasA = 0;
		int cont = 0;
		
		System.out.print("Quantas notas deseja informar? ");	
		int quantidadeNotas = entrada.nextInt();
		
		for (int qtdNotas = quantidadeNotas; qtdNotas > 0; qtdNotas--) {
			System.out.print("Digite a nota do aluno: ");
			double notaAluno = entrada.nextDouble();
			totalNotasA += notaAluno;
			//System.out.println(notaAluno);
		}
	
		for(double notasA: notas) {
			totalNotasA += notasA;
			cont ++;
		}
		entrada.close();

}
}
