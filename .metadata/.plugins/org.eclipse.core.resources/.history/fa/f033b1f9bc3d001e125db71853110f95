package oo.heranca.desafio;

public class Ferrari extends Carro implements Esportivo {

	public Ferrari() {
		this(350);
	}
	
	public Ferrari(int velocidadeMaxima){
		super(velocidadeMaxima);
		delta = 15;
	}
	
//	@Override
//	void acelerar() {
//		super.acelerar();
//	}
	
	@Override
	public void frear() {
		if(velocidadeDoCarro >= 15) {
			velocidadeDoCarro -= 15;
		} else {
			velocidadeDoCarro = 0;
		}
	}
	
	@Override
	public void ligarTurbo() {
		delta = 35;
		
	}
	
	@Override
	public void desligarTurbo() {
		delta = 15;
		
	}
}
